<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.UnsplashPaging" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/color_00205B</item>
        <item name="colorPrimaryDark">@color/color_00205B</item>
        <item name="android:statusBarColor">@color/color_white</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false
        </item> <!--disable dark mode-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/color_white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorSecondary">@color/color_989898</item>

    </style>

    <style name="Theme.UnsplashPaging" parent="Base.Theme.UnsplashPaging" />

    <style name="SplashScreenTheme" parent="Base.Theme.UnsplashPaging">
        <item name="android:navigationBarColor">@color/color_00205B</item>
    </style>
</resources>